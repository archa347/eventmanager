<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :street_address %>
    <%= f.input :unit %>
    <%= f.input :state_province %>
    <%= f.input :postal_code %>
    <%= f.input :city %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
